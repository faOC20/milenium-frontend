---

<Layout>
	
    <div class="w-full h-full flex flex-col gap-[3rem]">
        <section class="flex justify-center w-full gap-[3rem]">
            <OperationForm />
            <Notifications client:visible />
        </section>
        
        <section class="w-xs lg:w-full md:w-2xl">
            
                <ReactVirtualizedTable client:visible/>
            
        </section>
    </div>

    
    
    
