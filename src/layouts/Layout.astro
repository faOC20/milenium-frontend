---
import '@styles/global.css' 
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header/>
		<main class="md:items-center lg:items-start items-center">
			<slot />
		</main>
		<Footer/>
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		overflow-x: hidden;
	}

	header{
		width: 100%;
		height: 4.5rem;
		background-color: var(--color-theme-black);
		margin-bottom: 4rem;
	}

	main{
		width: 80rem;
		height: 100%;
		display: flex;
		flex-direction: column;
		/* align-items: center; */
		gap: 3rem;
		/* min-height: 100vh; */
	}

	footer{
		width: 100%;
		height: 4.5rem;
		background-color: var(--color-theme-black);
		margin-top: 4rem;
	}
</style>
