---
import '@styles/global.css' 
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
import Navigation from '@components/Navigation.astro'

interface Props{
	style:string
}

const {style} = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Milenium System</title>
	</head>
	<body>
		<Header/>
		<Navigation/>
		<main class=`${style}`>
			<slot />	
		</main>
		<!-- <Footer/> -->
	</body>
</html>

<style is:global>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		align-items: center;
	}

	html{
		overflow-x: hidden;
		overflow-y: scroll;
	}

	body{
		overflow: hidden;
		display: grid;
		grid-template-areas: 
		"nav header header"
		"nav main main" 
		"nav main main" 
		;
		grid-template-columns: 280px 1fr 1fr;
		grid-template-rows: 70px auto auto;
	}

	header{
		grid-area: header;
		width: 100%;
		height: 100%;
		/* background-color: var(--color-theme-black); */
		color: var(--color-theme-black);
	}

	main{
		width: 100%;
		height: 100%;
		grid-area: main;
		display: flex;
	}

	nav {
		display: flex;
		width: 100%;
		height: 100%;
		grid-area: nav;
		background-color: var(--color-theme-black);
	}
	
</style>
