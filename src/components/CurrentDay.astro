<b id="live-date"></b>

<script>
  // Sistema de actualización ultra-preciso
  const updateDate = () => {
    console.log('hola')
    document.getElementById('live-date').textContent = 
      new Date().toLocaleDateString('es-VE', {
        weekday: 'long',
        day: 'numeric',
        month: 'long',
        year: 'numeric',
        timeZone: 'America/Caracas'
      });
  };

  // Chequeo cada minuto + al cambiar de hora
  updateDate()
  setInterval(updateDate, 60000);
  
</script>